    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "app.js",
            "program": "${workspaceFolder}/server/app.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Test",
            "program": "${workspaceFolder}/server/node_modules/mocha/bin/_mocha",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "--grep",
                "login",
                "${workspaceFolder}/server/tests/root_test.js"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test.js",
            "program": "${workspaceFolder}/server/tests/test.js"
        }
    ]
}